<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComputadoraActivity"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/txtCodigoComputadora"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:hint="CODIGO"
        android:inputType="number"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtModeloComputadora"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:hint="MODELO O NOMBRE"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtMarcaComputadora"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:hint="MARCA"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtGeneracionComputadora"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:hint="GENERACION"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtPrecioComputadora"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:hint="PRECIO"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnGuardarComputadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="Guardar"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMostrarComputadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:src="@android:drawable/ic_menu_revert"
        app:backgroundTint="@color/design_default_color_on_secondary" />
</RelativeLayout>